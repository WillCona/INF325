<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewProf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CodProf:" />

        <EditText
            android:id="@+id/editTextProf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonProf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buscarProf"
            android:text="Buscar" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewProf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/buttonProf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="retornar"
        android:text="Retornar" />

</LinearLayout>